@using MediPlusMVC.DTO.AppointmentDTO;
@model AppointmentDTO;

<div class="container-fluid">
    <form method="post">
        <div class="form-group">
            <label asp-for="DoctorId">Select Doctor</label>
            <select asp-for="DoctorId" asp-items="ViewBag.Doctors" class="form-control"></select>
            <span asp-validation-for="DoctorId"></span>
        </div>
        <div class="form-group">
            <label asp-for="PatientId">Select Patient</label>
            <select asp-for="PatientId" asp-items="ViewBag.Patients" class="form-control"></select>
            <span asp-validation-for="PatientId"></span>
        </div>
        <div class="form-group">
            <label asp-for="AppointmentDate">AppointmentDate</label>
            <input asp-for="AppointmentDate" type="datetime-local" class="form-control">
            <span asp-validation-for="AppointmentDate"></span>
        </div>
        <div class="form-group">
            <span>@Html.ValidationSummary()</span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>